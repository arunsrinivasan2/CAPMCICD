{
    "name": "demoProject",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap-cloud-sdk/core": "^1.54.2",
        "@sap-cloud-sdk/http-client": "^3.7.0",
        "@sap/cds": ">=5.9",
        "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
        "express": "^4",
        "@sap/xssec": "^3",
        "passport": "^0"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "@sap/ux-specification": "^1.108.17",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-demoproject": "cds watch --open demoproject/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy demoProject --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "requires": {
            "Northwind": {
                "kind": "odata-v2",
                "model": "srv/external/Northwind",
                "credentials": {
                    "url": "https://services.odata.org/V2/OData/OData.svc"
                }
            },
            "[production]": {
              "credentials": {
                  "destination": "NorthWind"
              }
          }
      },
      "[production]": {
          "auth": {
              "kind": "xsuaa",
              "restrict_all_services": false
          }
      

      }
    },
    "sapux": [
        "app/demoproject"
    ]
}
